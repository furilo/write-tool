<header class="bg-primary-100 py-1 px-5 border-b text-gray-600 h-12 flex justify-between items-center">

    <div class="flex">
      <%= link_to current_user.present? ? user_root_path : root_path, class:'font-bold text-primary-600 uppercase flex items-center text-sm' do %>
        <div class="w-3 h-3 mr-2 bg-primary-300 rounded"></div>
        <div><%= site_name %></div>
      <% end %>
    </div>
    <div class="text-left text-sm space-x-4 flex items-center">
      <% if current_user %>
        <%= form_with model: @new_project_prompt do |f| %>
          <%= f.submit "New prompt", class: "button button-xs" %>
        <% end %>

        <%= image_tag GravatarHelper.gravatar_url_for(current_user.email), class: "header-avatar" %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "button button-xs" %>
      <% end %>
    </div>

    <% if content_for?(:section_nav) %>
      <%= yield(:section_nav) %>
    <% end %>

  </header>
